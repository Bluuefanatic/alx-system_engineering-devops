#!/usr/bin/env bash
# Script to display content of the current directory in a list format

# Using a for loop to iterate over files in the current directory
for file in *; do
    # Check if the file is not a hidden file
    if [[ ! "$file" =~ ^\. ]]; then
        # Extract the part of the name after the first dash
        name_after_dash=$(echo "$file" | cut -d'-' -f2-)
        
        # Display the modified name in a list format
        echo "- $name_after_dash"
    fi
done
