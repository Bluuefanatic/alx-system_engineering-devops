#!/usr/bin/env bash
# This init script manages the manage_my_process script.

process_script="./manage_my_process"
pid_file="/var/run/my_process.pid"

start_process() {
    if [ -f "$pid_file" ]; then
        echo "Error: $process_script is already running."
        exit 1
    fi

    $process_script &
    echo $! > "$pid_file"
    echo "$process_script started"
}

stop_process() {
    if [ -f "$pid_file" ]; then
        pid=$(cat "$pid_file")
        kill "$pid"
        rm -f "$pid_file"
        echo "$process_script stopped"
    else
        echo "Error: $process_script is not running."
        exit 1
    fi
}

restart_process() {
    stop_process
    start_process
    echo "$process_script restarted"
}

case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        restart_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
